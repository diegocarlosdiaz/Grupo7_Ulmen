<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

<body class="home">

    <%- include('./partials/header') %>

    <main>
        <section class="vistos">
            <h2><%= nombre %> </h2>
            <div class="container">
                <%productos.forEach(producto =>{%>
                <div class="product">
                    
                    <a href="/productDetail/<%=producto.id%>"><img src="/images/productos/<%= producto.imagenes[0]?.nombre %>" alt=""></a>
                    <div>
                        <h3><%= producto.nombre %> </h3>
                        <span>$ <%= producto.precio %></span>
                    </div>
                    <i class="fas fa-cart-plus icon"></i>
                </div>
                <% }) %>
                
            </div>
        </section>
    </main>

    <%- include('./partials/footer') %>
</body>

</html>